'use client'

import Link from 'next/link'
import { useRouter } from 'next/navigation'
  
export default function Home() {
  
  const router = useRouter()
  return (
    <div className="flex flex-col items-center justify-center min-h-screen bg-gray-100 p-4">
      <h1 className="text-4xl font-bold mb-6 text-gray-800">Home Page</h1>
      <Link 
        href="/dashboard" 
        className="px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition"
      >
        Go to Dashboard
      </Link>

      <button
        onClick={() => router.push('/dashboard')}
        className="my-6 px-6 py-3 bg-green-600 text-white rounded-md hover:bg-green-700 transition"
      >
        Navigate with push
      </button>

      <button
        onClick={() => router.replace('/dashboard')}
        className="px-6 py-3 bg-yellow-600 text-white rounded-md hover:bg-yellow-700 transition"
      >
        Navigate with replace
      </button>

    </div>
  )
}
